<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_friend_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.asus.activity.AddFriend">
    <include layout="@layout/return_layout"/>
    <include layout="@layout/user_layout"/>
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/button_size"/>-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_size"
        android:id="@+id/settingTag"
        android:text="@string/setting_tag"
        android:textSize="@dimen/text_size"
        android:gravity="center"
        android:background="@color/bg_color"
        android:layout_marginTop="@dimen/activity_horizontal_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"

        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_size"
            android:layout_marginTop="@dimen/button_size"
            android:background="@drawable/add_friend_button_bg"
            android:text="@string/add_friend"
            android:textSize="@dimen/text_size"
            android:id="@+id/addButton"
            />
    </LinearLayout>

</LinearLayout>
